# fail save
alias rm "rm -i"
alias mv "mv -i"
alias cp "cp -i"

# some shortcuts that I am used to
alias cls "clear"
alias quit "exit"
alias q "exit"

# create nested directories, if they not exist
alias mkdir "mkdir -p"

# common places
alias dots "cd $HOME/.dotfiles"
alias docs "cd $HOME/Documents"
alias drop "cd $HOME/Dropbox"

alias b "cd .."
alias bb "cd ../.."
